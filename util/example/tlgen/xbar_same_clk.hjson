{
  name: "2x2_same_clk",
  clock: "clk_main_i",
  clock_connections: {
    clk_main_i:   "main"
  }
  reset: "rst_main_ni",
  reset_connections: {
    rst_main_ni:   "sys"
  }
  nodes: [
    { name: "h0",
      type: "host",
      clock: "clk_main_i",
      reset: "rst_main_ni",
      addr_space: "hart",
      xbar: false
    },
    { name: "h1",
      type: "host",
      clock: "clk_main_i",
      reset: "rst_main_ni",
      addr_space: "hart",
      xbar: false
    },
    { name: "d0",
      type: "device",
      clock: "clk_main_i",
      reset: "rst_main_ni",
      addr_range: [{
        base_addrs: {
          hart: 0x0000
        },
        size_byte: "0x1000"
      }]
      xbar: false
    },
    { name: "d1",
      type: "device",
      clock: "clk_main_i",
      reset: "rst_main_ni",
      addr_range: [{
        base_addrs: {
          hart: 0x1000
        },
        size_byte: "0x1000"
      }]
      xbar: false
    }
  ],
  connections: {
    h0: ["d0", "d1"],
    h1: ["d0", "d1"]
  }
}
